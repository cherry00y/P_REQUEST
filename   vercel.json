{
    "builds": [
      {
        "src": "my-app/src/**/*",
        "use": "@vercel/next"
      },
      {
        "src": "my-api/server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/my-api/server.js"  
      },
      {
        "src": "/(.*)",
        "dest": "/my-app/src/$1"  
      }
    ]
  }
  